<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/haha"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Music"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:textSize="20sp"/>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="?attr/colorPrimary"
                    app:layout_collapseMode="pin"
                    app:layout_scrollFlags="scroll|enterAlways"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:titleTextColor="#ffffff" />
        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:id="@+id/id_scrollView"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/music"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:singleLine="true"
                            android:text="下面是我们收集的一些有语言特色小歌曲，在疲惫的时候relax，是一个不错的选择哦～～～(切换前一定要停止播放上一曲哦)"
                            android:background="#5090EE90"
                            android:textColor="#000000" />

                        <RelativeLayout
                            android:id="@+id/r1"
                            android:layout_below="@+id/music"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/r1_img"
                                    android:layout_width="210dp"
                                    android:layout_height="170dp"
                                    android:src="@drawable/yueban" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/r1_img"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="25dp"
                                            android:layout_marginTop="3dp"
                                            android:text="粤语"
                                            android:textColor="@color/md_green_400"
                                            android:textSize="40sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="35dp"
                                            android:layout_marginTop="58dp"
                                            android:text="月半小夜曲" />

                                        <Button
                                            android:id="@+id/btn_play"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="30dp"
                                            android:layout_marginTop="80dp"
                                            android:text="播放" />

                                        <Button
                                            android:id="@+id/btn_stop"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="30dp"
                                            android:layout_marginTop="80dp"
                                            android:enabled="false"
                                            android:text="停止" />
                                </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/r2"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_below="@+id/r1"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/r2_img"
                                    android:layout_width="200dp"
                                    android:layout_height="170dp"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/minnan" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/r2_img"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="25dp"
                                            android:layout_marginTop="3dp"
                                            android:text="闽南语"
                                            android:textColor="@color/md_green_400"
                                            android:textSize="40sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="45dp"
                                            android:layout_marginTop="58dp"
                                            android:text="一生只有你" />

                                        <Button
                                            android:id="@+id/btn_play1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="40dp"
                                            android:layout_marginTop="80dp"
                                            android:text="播放" />

                                        <Button
                                            android:id="@+id/btn_stop1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="40dp"
                                            android:layout_marginTop="80dp"
                                            android:enabled="false"
                                            android:text="停止" />
                                </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/r3"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_below="@+id/r2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/r3_img"
                                    android:layout_width="200dp"
                                    android:layout_height="170dp"
                                    android:src="@drawable/tongdawei" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/r3_img"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="25dp"
                                            android:layout_marginTop="3dp"
                                            android:text="东北话"
                                            android:textColor="@color/md_green_400"
                                            android:textSize="40sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="35dp"
                                            android:layout_marginTop="58dp"
                                            android:text="我的滑板鞋" />

                                        <Button
                                            android:id="@+id/btn_play2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="30dp"
                                            android:layout_marginTop="80dp"
                                            android:text="播放" />

                                        <Button
                                            android:id="@+id/btn_stop2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="30dp"
                                            android:layout_marginTop="80dp"
                                            android:enabled="false"
                                            android:text="停止" />
                                </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/r4"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_below="@+id/r3"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/r4_img"
                                    android:layout_width="200dp"
                                    android:layout_height="170dp"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/awmz" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/r4_img"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="25dp"
                                            android:layout_marginTop="3dp"
                                            android:text="长沙语"
                                            android:textColor="@color/md_green_400"
                                            android:textSize="40sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="45dp"
                                            android:layout_marginTop="58dp"
                                            android:text="爱我莫走" />

                                        <Button
                                            android:id="@+id/btn_play3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="40dp"
                                            android:layout_marginTop="80dp"
                                            android:text="播放" />

                                        <Button
                                            android:id="@+id/btn_stop3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="40dp"
                                            android:layout_marginTop="80dp"
                                            android:enabled="false"
                                            android:text="停止" />
                                </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/r5"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_below="@+id/r4"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/r5_img"
                                    android:layout_width="200dp"
                                    android:layout_height="170dp"
                                    android:src="@drawable/sht" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/r5_img"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="25dp"
                                            android:layout_marginTop="3dp"
                                            android:text="上海话"
                                            android:textColor="@color/md_green_400"
                                            android:textSize="40sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="45dp"
                                            android:layout_marginTop="58dp"
                                            android:text="上海滩" />

                                        <Button
                                            android:id="@+id/btn_play4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="30dp"
                                            android:layout_marginTop="80dp"
                                            android:text="播放" />

                                        <Button
                                            android:id="@+id/btn_stop4"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="30dp"
                                            android:layout_marginTop="80dp"
                                            android:enabled="false"
                                            android:text="停止" />
                                </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/r6"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_below="@+id/r5"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/r6_img"
                                    android:layout_width="200dp"
                                    android:layout_height="170dp"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/ob" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/r6_img"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="25dp"
                                            android:layout_marginTop="3dp"
                                            android:text="英文歌"
                                            android:textColor="@color/md_green_400"
                                            android:textSize="40sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="45dp"
                                            android:layout_marginTop="58dp"
                                            android:text="old boy" />

                                        <Button
                                            android:id="@+id/btn_play5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="40dp"
                                            android:layout_marginTop="80dp"
                                            android:text="播放" />

                                        <Button
                                            android:id="@+id/btn_stop5"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="40dp"
                                            android:layout_marginTop="80dp"
                                            android:enabled="false"
                                            android:text="停止" />
                                </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/r7"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_below="@+id/r6"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/r7_img"
                                    android:layout_width="200dp"
                                    android:layout_height="170dp"
                                    android:src="@drawable/hnj" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/r7_img"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="25dp"
                                            android:layout_marginTop="3dp"
                                            android:text="河北话"
                                            android:textColor="@color/md_green_400"
                                            android:textSize="40sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="45dp"
                                            android:layout_marginTop="58dp"
                                            android:text="回娘家" />

                                        <Button
                                            android:id="@+id/btn_play6"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="30dp"
                                            android:layout_marginTop="80dp"
                                            android:text="播放" />

                                        <Button
                                            android:id="@+id/btn_stop6"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="30dp"
                                            android:layout_marginTop="80dp"
                                            android:enabled="false"
                                            android:text="停止" />
                                </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/r8"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_below="@+id/r7"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/r8_img"
                                    android:layout_width="200dp"
                                    android:layout_height="150dp"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/yfx" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@+id/r8_img"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="25dp"
                                            android:layout_marginTop="3dp"
                                            android:text="日语"
                                            android:textColor="@color/md_green_400"
                                            android:textSize="40sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="55dp"
                                            android:layout_marginTop="58dp"
                                            android:text="一番星" />

                                        <Button
                                            android:id="@+id/btn_play7"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="40dp"
                                            android:layout_marginTop="80dp"
                                            android:text="播放" />

                                        <Button
                                            android:id="@+id/btn_stop7"
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:layout_marginLeft="40dp"
                                            android:layout_marginTop="80dp"
                                            android:enabled="false"
                                            android:text="停止" />
                                </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/r9"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_below="@+id/r8"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/r9_img"
                                    android:layout_width="200dp"
                                    android:layout_height="170dp"
                                    android:src="@drawable/xmj" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@+id/r9_img"
                                    android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="25dp"
                                            android:layout_marginTop="3dp"
                                            android:text="Chinese"
                                            android:textColor="@color/md_green_400"
                                            android:textSize="30sp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="45dp"
                                            android:layout_marginTop="58dp"
                                            android:text="学猫叫" />

                                        <Button
                                            android:id="@+id/btn_play8"
                                            android:layout_width="wrap_content"
